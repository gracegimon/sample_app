<h1><%= @title %></h1>


<%= form_for(@user) do |f| %>  <!-- We have to make sure @user is not nil -->
<!-- The form makes the post and relates to action ="/users" -->
 
 <!-- render a partial -->
 <%= render 'shared/error_messages', :object => f.object %> <!-- Just for ActiveRecord objects -->

	<div class = "field"> 
		<%= f.label :name %> <br />
		<%= f.text_field :name %>
	</div>
	<div class = "field"> 
		<%= f.label :email %> <br />
		<%= f.text_field :email %>
	</div>
	<div class = "field"> 
		<%= f.label :password %> <br />
		<%= f.password_field :password %>
	</div>	
	<div class = "field"> 
		<%= f.label :password_confirmation, "Confirmation" %> <br />
		<%= f.password_field :password_confirmation %>
	</div>

	<div class = "actions"> 
		<%= f.submit "Sign up" %> <br />
	</div>		
<% end %>